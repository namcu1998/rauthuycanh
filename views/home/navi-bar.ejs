<div class="information-esp">
    <div class="information-esp-content">
        <img id="btn-close-information-esp" src="/image/wifi.png" alt="">
        <img src="/image/information.png" alt="">
    </div>
    <% if (espSensorConnectStatus[0]===true) { %>
        <div class="information-esp-content1 element">
            <div>
                <span>Trạng thái ESP1: </span>
                <% if (espSensorConnectStatus[0]===true) { %>
                    <span>connected</span>
                    <% } %>
            </div>
            <div>
                <img src="/image/ip.svg" alt="Kiwi standing on oval" width="16px" height="16px">
                <% if (espInformation) { %>
                    <span>
                        <%= espInformation[0].IPAddress %>
                    </span>
                    <% } %> <br>
            </div>
            <div>
                <img src="/image/wifi.svg" alt="Kiwi standing on oval" width="16px" height="16px">
                <% if (espInformation[0]) { %>
                    <span>
                        <%= espInformation[0].wifiStrength %>
                    </span>
                    <% } %>
                        <span>dBm</span> <br>
            </div>
            <div>
                <img src="/image/cpu.svg" alt="Kiwi standing on oval" width="16px" height="16px">
                <% if (espInformation[0]) { %>
                    <span>
                        <%= espInformation[0].cpuSpeed %>
                    </span>
                    <% } %>
                        <span>Mhz</span> <br>
            </div>
            <div>
                <img src="/image/memory.svg" alt="Kiwi standing on oval" width="16px" height="16px">
                <% if (espInformation[0]) { %>
                    <span>
                        <%= espInformation[0].ramUsed %>
                    </span>
                    <% } %> <br>
            </div>
        </div>
    <% } %>
    <% if (espSensorConnectStatus[1]===true) { %>
        <div class="information-esp-content1 element1">
            <div>
                <% if (espSensorConnectStatus[1]) { %>
                    <span>Trạng thái ESP2: </span>
                    <span>connected</span>
                    <% } %>
            </div>
            <div>
                <img src="/image/ip.svg" alt="Kiwi standing on oval" width="16px" height="16px">
                <% if (espInformation) { %>
                    <span>
                        <%= espInformation[1].IPAddress %>
                    </span>
                    <% } %>
            </div>
            <div>
                <img src="/image/wifi.svg" alt="Kiwi standing on oval" width="16px" height="16px">
                <% if (espInformation) { %>
                    <span>
                        <%= espInformation[1].wifiStrength %>
                    </span>
                    <% } %>
                        <span>dBm</span> <br>
            </div>
            <div>
                <img src="/image/cpu.svg" alt="Kiwi standing on oval" width="16px" height="16px">
                <% if (espInformation) { %>
                    <span>
                        <%= espInformation[1].cpuSpeed %>
                    </span>
                    <% } %>
                        <span>Mhz</span> <br>
            </div>
            <div>
                <img src="/image/memory.svg" alt="Kiwi standing on oval" width="16px" height="16px">
                <% if (espInformation) { %>
                    <span>
                        <%= espInformation[1].ramUsed %>
                    </span>
                    <% } %>
            </div>
        </div>
    <% } %>
</div>
<div class="information-sensor">
    <div class="line">
        <img id="btn-close-notification" src="/image/cancel.png" alt="">
        <div>
            <h2>Tình trạng cảm biến</h2>
        </div>
    </div>
    <div id="information-content">
    </div>
</div>